generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String  @id @default(uuid()) @map("_id")
  name           String?
  email          String  @unique
  hashedPassword String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Campagne {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  lieux     Json
  nom       String
  dateDebut DateTime?
  dateFin   DateTime?
  theatreId String    @db.ObjectId
  theatre   Theatre   @relation(fields: [theatreId], references: [id])
  prix      Float
  status    String
}

model Theatre {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  nom      String
  lieux    Json
  capacite Int

  Campagne Campagne[]
}

model Acteur {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  nom           String
  prenom        String
  dateNaissance DateTime
  nationalite   String
  bio           String?
  spectacleIds  String[]  @db.ObjectId
  spectacle     Spectacle @relation(fields: [spectacleIds], references: [id])
}

model Spectacle {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  titre       String
  description String
  acteurId    String   @db.ObjectId
  Acteur      Acteur[]
}
model Prospect{
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  nom      String
  prenom   String
  email     String 
  telephone String
  lieux    lieux
}

model FichierProspects {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  pays    String
  ville   String
  fileURL String?
}

type lieux {
  country String
  region  String
}
